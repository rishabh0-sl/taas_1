{
  "scenarios": [
    {
      "id": "scenario_1",
      "name": "Successful Login",
      "description": "Verify a user can successfully login with valid credentials (although these are not valid for Amazon).  This scenario uses placeholder credentials for testing purposes.",
      "steps": [
        {
          "action": "goto",
          "target": "https://www.amazon.com",
          "data": null,
          "description": "Navigate to the Amazon website"
        },
        {
          "action": "click",
          "target": "#nav-link-accountList",
          "data": null,
          "description": "Click on the Account & Lists link"
        },
        {
          "action": "click",
          "target": "#ap_email",
          "data": null,
          "description": "Focus on the email field (to simulate clicking)"
        },
        {
          "action": "fill",
          "target": "#ap_email",
          "data": "123",
          "description": "Enter username"
        },
        {
          "action": "fill",
          "target": "#ap_password",
          "data": "123",
          "description": "Enter password"
        },
        {
          "action": "click",
          "target": "#signInSubmit",
          "data": null,
          "description": "Click on the Sign-In button"
        },
        {
          "action": "expect",
          "target": "div[data-csa-c-type='test-content']",
          "data": null,
          "description": "Expect an error message indicating invalid credentials. This is a positive test for error handling."
        }
      ]
    },
    {
      "id": "scenario_2",
      "name": "Unsuccessful Login - Invalid Credentials",
      "description": "Verify that an error message is displayed when incorrect credentials are provided.",
      "steps": [
        {
          "action": "goto",
          "target": "https://www.amazon.com",
          "data": null,
          "description": "Navigate to the Amazon website"
        },
        {
          "action": "click",
          "target": "#nav-link-accountList",
          "data": null,
          "description": "Click on the Account & Lists link"
        },
        {
          "action": "click",
          "target": "#ap_email",
          "data": null,
          "description": "Focus on the email field (to simulate clicking)"
        },
        {
          "action": "fill",
          "target": "#ap_email",
          "data": "123",
          "description": "Enter invalid username"
        },
        {
          "action": "fill",
          "target": "#ap_password",
          "data": "123",
          "description": "Enter invalid password"
        },
        {
          "action": "click",
          "target": "#signInSubmit",
          "data": null,
          "description": "Click on the Sign-In button"
        },
        {
          "action": "expect",
          "target": "div[data-csa-c-type='test-content']",
          "data": null,
          "description": "Expect an error message indicating invalid credentials."
        }
      ]
    }
  ]
}