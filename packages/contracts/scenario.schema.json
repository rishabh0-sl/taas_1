{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test Scenario Schema",
  "description": "Schema for generated test scenarios",
  "type": "object",
  "required": ["id", "name", "steps"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique scenario identifier"
    },
    "name": {
      "type": "string",
      "description": "Human-readable scenario name"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["action", "target", "description"],
        "properties": {
          "action": {
            "type": "string",
            "enum": ["goto", "fill", "click", "expect"],
            "description": "Action to perform (only goto, fill, click, expect are allowed)"
          },
          "target": {
            "type": "string",
            "description": "Target selector or text"
          },
          "data": {
            "type": "string",
            "description": "Data to input (for fill, type actions)"
          },
          "description": {
            "type": "string",
            "description": "Human-readable step description"
          }
        }
      }
    },
    "timeTakenToCompile": {
      "type": "string",
      "description": "Time taken to compile the scenario"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for categorizing scenarios"
    }
  }
}
